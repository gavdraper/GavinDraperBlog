{{!< default}}

{{! This is a page template. A page outputs content just like any other post, and has all the same
    attributes by default, but you can also customise it to behave differently if you prefer. }}
<header class="main-header {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">
    <nav class="main-nav overlay clearfix">
        {{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Blog Logo" /></a>{{/if}}
        <a class="subscribe-button icon-feed" href="{{@blog.url}}/rss/">Subscribe</a>
    </nav>
    <div class="vertical">
        <div class="main-header-content inner">
            <span class="main-title"><a href="{{@blog.url}}"><h1 class="page-title">{{@blog.title}}</h1></a></span>
            <h2 class="page-description">{{@blog.description}}</h2>
                        <a target="_blank" href="http://www.twitter.com/gavdraper">@gavdraper</a> | 
                        <a target="_blank" href="http://www.google.com/+gavindraper">+gavdraper</a> | 
                        <a target="_blank" href="http://github.com/gavdraper">github</a> | 
                        <a target="_blank" href="http://careers.stackoverflow.com/gavindraper">StackOverflow Careers</a>
                        <div style="margin-top:1px;">&nbsp;</div>
        </div>
    </div>
    <a class="scroll-down icon-arrow-left" href="#content" data-offset="-45"><span class="hidden">Scroll Down</span></a>
</header>

<main class="content" role="main">

    <article class="{{post_class}}">
            <header class="post-header">
            <a class="blog-logo" href="{{@blog.url}}">
                {{#if @blog.logo}}
                    <img src="{{@blog.logo}}" alt="Blog Logo" />
                {{else}}
                    <span class="blog-title">{{@blog.title}}</span>
                {{/if}}
            </a>
        </header>
    {{! Everything inside the #post tags pulls data from the post }}
    {{#post}}

        <h1 class="post-title">{{title}}</h1>

        <section class="post-content">
            {{content}}
        </section>

    {{/post}}
    </article>

</main>
